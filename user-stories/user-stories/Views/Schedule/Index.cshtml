
@{
    ViewBag.Title = "Index";
}

<div class="body-content">
    <div class="container personal">
        <div class="row">
            <div class="col-xs-12">
                <ul class="nav nav-tabs" id="myTabs">
                    <li class="active"><a data-target="#tab1" data-toggle="tab">1</a></li>
                    <li><a data-target="#tab2" data-toggle="tab">2</a></li>

                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab1">
                        <div class="col-xs-12 col-sm-12">
                            <div class="col-xs-12 info-panel">
                                <div class="col-xs-12 info-name">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <h3 class="text-center">Bus stops</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 info-content">
                                    @Html.Action("BusStopsList", "Schedule")     
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane active" id="tab2">
                        <div class="col-xs-12 col-sm-12">
                            <div class="col-xs-12 info-panel">
                                <div class="col-xs-12 info-name">
                                    <div class="row">
                                        <div class="col-xs-11">
                                            <h3 class="text-center">Voyage</h3>
                                        </div>
                                        <div class="col-xs-1 text-left">
                                            <a href="@Url.Action("FindVoyage", "Schedule")" class="btn btn-warning btn-circle"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 info-content">
                                    @Html.Action("VoyagesList", "Schedule")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTabs a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            })
        });
  
    </script>
}