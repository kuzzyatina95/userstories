@model user_stories.Models.BusStop

<div class="body-content">
    <div class="container personal">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4 text-center">
                <h2>Bus stop information</h2>
            </div>
        </div>
        <div class="row">
            
            <div class="col-xs-12 col-sm-6">
                <div class="col-xs-12 info-panel">
                    <div class="col-xs-12 info-name">
                        <div class="row">
                            <div class="col-xs-12">
                                <h3 class="text-center">@Html.DisplayFor(model => model.Name)</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 info-content">
                        <div class="row">
                            <div class="col-xs-3">
                                @Html.DisplayNameFor(model => model.Description):
                            </div>
                            <div class="col-xs-9">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-6">
                <div class="col-xs-12 info-panel">
                    <div class="col-xs-12 info-name">
                        <div class="row">
                            <div class="col-xs-12">
                                <h3 class="text-center">Voyages</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 info-content">
                        @Html.Action("VoyagesList", "VoyageDatas", new {id = Model.Id})
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
